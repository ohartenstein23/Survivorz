armors:
  - type: STR_FLYING_DRONE_ARMOR_UC
    spriteSheet: DRONE_FLYING.PCK
    spriteInv: DRONE_FLYING
    corpseBattle:
      - STR_RECOVER_FLYING_DRONE_ARMOR
    corpseGeo: STR_RECOVER_FLYING_DRONE_ARMOR
    storeItem: STR_NONE
    fearImmune: true
    bleedImmune: true
    zombiImmune: true
    weight: 0
    builtInWeapons:
      - INV_NULL_RH
      - INV_NULL_LH
      - INV_NULL_2X1_LS
      - INV_NULL_2X1_RS
      - INV_NULL_2X1_LL
      - INV_NULL_2X1_RL
      - INV_NULL_4X2_B
      - INV_NULL_3X3_BACK
    frontArmor: 20
    sideArmor: 20
    rearArmor: 20
    underArmor: 20
    psiDefense:
      flatHundred: 10.0
    drawingRoutine: 4
    movementType: 1
    scripts:
      selectUnitSprite:
        # Choose walking sprite even while flying
        var int flying;

        unit.isFlying flying;

        if neq flying 0;

          unit.getDirection sprite_offset;
          mul sprite_offset 8;
          add sprite_offset 8;

        end;

        add sprite_index sprite_offset;

        return sprite_index;

    damageModifier:
      - 1.0
      - 1.0
      - 0.4
      - 0.75
      - 1.0
      - 1.0
      - 0.0
      - 0.9
      - 0.4
      - 0.0
    units:
      - STR_AI_SUBROUTINE
    loftempsSet: [ 4 ]

