research:
# Starting research, the getOneFree opens up the world mission generation
  - name: STR_POST_ITEM
    lookup:
      - STR_POST
    cost: 0
    score: 0
    needItem: true
    destroyItem: true
    getOneFree:
      - STR_WORLDGEN_FAMINE # Resources are harder to come by, fewer lucrative missions
      - STR_WORLDGEN_PLAGUE # Environments are more dangerous, your soldiers spend more time off
      - STR_WORLDGEN_WAR # Face harder enemies earlier, more anti-player missions
    unlocks:
      - STR_DATABASE

  - name: STR_WORLDGEN_FAMINE
    dependencies:
      - STR_UNAVAILABLE
    lookup:
      - STR_PLANETARY_SCAN
    cost: 0
    score: 0

  - name: STR_WORLDGEN_PLAGUE
    dependencies:
      - STR_UNAVAILABLE
    lookup:
      - STR_PLANETARY_SCAN
    cost: 0
    score: 0

  - name: STR_WORLDGEN_WAR
    dependencies:
      - STR_UNAVAILABLE
    lookup:
      - STR_PLANETARY_SCAN
    cost: 0
    score: 0

  - name: STR_DATABASE
    cost: 0
    score: 0
    dependencies:
      - STR_POST_ITEM

# Research articles for items from waking up the officers
