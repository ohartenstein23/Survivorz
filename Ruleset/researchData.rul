    cost: 1
    score: 0
    needItem: true
    destroyItem: true
    dependencies:
      - STR_POST_ITEM
    unlocks:
      - STR_LINAC_GRENADE

  - name: STR_HEAD_SCIENTIST_ITEM
    cost: 1
    score: 0
    needItem: true
    destroyItem: true
